<%= simple_form_for(@ordem) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
		<%= f.label :cliente_id %>
		<%= f.autocomplete_field :cliente_id, autocomplete_cliente_name_ordems_path %>		  
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.association :produto, prompt: "Escolha o produto" %>
		<%= f.association :papel, label_method: :tipo, value_method: :id, prompt: "Escolha o papel" %>
		<%= f.association :maquina, label_method: :tipo, value_method: :id, prompt: "Escolha a mÃ¡quina"  %>
    <%= f.input :valor %>
    <%= f.input :observacao %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
