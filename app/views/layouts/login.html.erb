									<li><a href="/maquinas">Maquinas</a></li>
								</ul>
							</div>
						</div>
					<%end%>
					<% if user_signed_in? %>
						<div class="span10">
					<%else%>
						<div class="span12">
					<%end%>
						<%= render 'layouts/messages' %>
						<div class="content">
							 <%= yield %>
						</div>
						<footer>
						</footer>
					</div>
				</div> <!--! end of .container -->
			</div> <!--! end of #main -->
  </body>
</html>
