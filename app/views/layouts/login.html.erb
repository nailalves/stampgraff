      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
			<div id="main" role="main">
				<div class="container-fluid">
					<% if user_signed_in? %>
						<div class="span2">
							<div class="row-fluid">
								<ul class="nav nav-list">
