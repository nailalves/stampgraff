<div class="inner_content">
<h1 class="page-header">Clientes</h1>

<table  class="table table-striped">
  <thead>
  <tr>
    <th>Cliente</th>
    <th>Rg</th>
    <th>Nascimento</th>
    <th>Telefone Fixo</th>
    <th>Celular</th>
    <th>Celular 2</th>
    <th>Endereco</th>
    <th>Email Pessoal</th>
    <th>Email Empresa</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
	<% @clientes.each do |cliente| %>
	  <tr>
		<td><%= cliente.name %></td>
		<td><%= cliente.rg %></td>
		<td><%= cliente.nascimento %></td>
		<td><%= cliente.telefone %></td>
		<td><%= cliente.celular %></td>
		<td><%= cliente.celular2 %></td>
		<td><%= cliente.endereco %></td>
		<td><%= cliente.email_pessoal %></td>
		<td><%= cliente.email_empresa %></td>
		<td><%= link_to 'Mostrar', cliente %></td>
		<td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
		<td><%= link_to 'Deletar', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />
</div>
<div class="form-actions">
	<%= link_to 'Novo Cliente', new_cliente_path, :class => 'btn btn-primary' %>
</div>
